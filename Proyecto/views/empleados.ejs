<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Empleados</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Empleados</h1>
        <ul class="list-group mb-4">
            <% empleados.forEach(function(empleado) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Nombre:</strong> <%= empleado.nombre %> |
                        <strong>Puesto:</strong> <%= empleado.puesto %> |
                        <strong>Departamento:</strong> <%= empleado.departamento %> |
                        <strong>Salario:</strong> <%= empleado.salario %> |
                        <strong>Fecha de Contrataci√≥n:</strong> <%= moment(empleado.fecha_contratacion).format('YYYY-MM-DD') %>
                    </div>
                    <div>
                        <a href="/empleados/edit/<%= empleado._id %>" class="btn btn-sm btn-warning">Editar</a>
                        <form action="/empleados/delete/<%= empleado._id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>
        <a href="/" class="btn btn-primary">Volver al inicio</a>
    </div>
</body>
</html>
