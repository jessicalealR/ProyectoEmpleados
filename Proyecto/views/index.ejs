<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD de Empleados</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script>
        function validarNombre() {
            var nombre = document.getElementById('nombre').value;
            if (/^\d+$/.test(nombre)) {
                alert("El nombre no puede contener números.");
                document.getElementById('nombre').value = '';
            }
        }

        function validarPuesto() {
            var puesto = document.getElementById('puesto').value;
            if (/^\d+$/.test(puesto)) {
                alert("El puesto no puede contener números.");
                document.getElementById('puesto').value = '';
            }
        }
    </script>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Gestión de Empleados</h1>

        <% if (warningMessage) { %>
            <div class="alert alert-warning" role="alert">
                <%= warningMessage %>
            </div>
        <% } %>

        <a href="/empleados" class="btn btn-primary mb-4">Ver Lista de Empleados</a>
        <h2>Agregar Nuevo Empleado</h2>
        <form action="/empleados" method="POST">
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" class="form-control" id="nombre" name="nombre" required oninput="validarNombre()">
            </div>
            <div class="form-group">
                <label for="puesto">Puesto:</label>
                <input type="text" class="form-control" id="puesto" name="puesto" required oninput="validarPuesto()">
            </div>
            <div class="form-group">
                <label for="departamento">Departamento:</label>
                <input type="text" class="form-control" id="departamento" name="departamento" required>
            </div>
            <div class="form-group">
                <label for="salario">Salario:</label>
                <input type="number" class="form-control" id="salario" name="salario" required>
            </div>
            <div class="form-group">
                <label for="fecha_contratacion">Fecha de Contratación:</label>
                <input type="date" class="form-control" id="fecha_contratacion" name="fecha_contratacion" required>
            </div>
            <button type="submit" class="btn btn-primary">Agregar Empleado</button>
        </form>
    </div>
</body>
</html>
